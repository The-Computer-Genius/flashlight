<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.Splash" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowFullscreen">true</item> <!-- Hide status bar -->

        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@android:color/transparent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_empty</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>